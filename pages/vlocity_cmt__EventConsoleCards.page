<apex:page standardController="Event" extensions="vlocity_cmt.InteractionLayoutController" docType="html-5.0" applyHtmlTag="false" showHeader="false" sidebar="false" standardStylesheets="false">

    <html xmlns:ng="http://angularjs.org" ng-app="myApp" class="ng-cloak"  style="height:100%">
        <head>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <style type="text/css">
            body {
                margin: 0px !important;
                padding: 0px !important;
            }
        </style>

        <apex:stylesheet value="{!URLFOR($Resource.vlocity_cmt__vlocity_assets, '/css/vlocity.css')}"/>
        
        <!-- Salesforce Console API -->
        <apex:includeScript value="/support/console/34.0/integration.js"/>
        <script type="text/javascript">
        function testSetTabTitle() {
            //Set the current tab's title
            sforce.console.setTabTitle('Event: {!Event.What.Name}');
        }
        var pageLoad = window.onload;
          window.onload = function() {
                if (pageLoad) {
                        pageLoad();
                }
                  testSetTabTitle();
          }
        </script>


        </head>
        <body>

            <!-- Component loads the vloc-layout and cards - defaults to Grid if no layout parameter is present -->
            <!-- <c:CardLayoutComponent layout="Grid" controllers="myCtrl" modules="myApp"/> -->
             <c:CardLayoutComponent layout="{!layoutName}" modules="myApp"/>

           <!-- <c:CardLayoutComponent layout="Console--MetDental" modules="myApp"/>-->


            <script type="text/javascript">
                var myApp = angular.module('myApp',['forceng','consoleCards']);
            </script>

        </body>
    </html>
</apex:page>